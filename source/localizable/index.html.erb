<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= I18n.t(:meloman) %> iPhone app</title>
  <meta name="description" content="Меломан iPhone app - Flatsoft, LLC">
  <meta name="author" content="Flatsoft, LLC">
  <link rel="icon" href="favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="apple-touch-icon" href="apple-touch-icon.png" />
  <meta name="viewport" content="width=device-width, user-scalable=yes, minimum-scale=0, maximum-scale=1.0" />
  <link href='http://fonts.googleapis.com/css?family=Lobster&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/libs/modernizr-2.0.6.min.js"></script>
</head>

<body>

  <div id="container">
    <header>
      <div class="wrap clearfix">
        <div class="iphone">
          <div class="label"></div>
          <div class="reflection"></div>
          <div class="slides">
            <ul>
              <%= I18n.t(:li_slides) %>
            </ul>
          </div>
        </div>
        <%= I18n.t(:about) %>
        <nav class="clearfix">
          <a href="#"><img src="/img/appstore.png" alt="Available on the iPhone App Store" width="154" height="51" /></a>
          <h1 class="video-link"><a href="#main"><%= I18n.t(:video_link) %><img src="/img/arrow.png" alt="" width="11" height="18" /></a></h1>
        </nav>
      </div>
    </header>
    <div id="main" role="main">
      <div class="wrap">
        <section class="clearfix">
          <div class="demo">
            <%= I18n.t(:demo) %>
          </div>
          <div id="video">
            <%= I18n.t(:video_youtube) %>
          </div>
        </section>
        <section class="steps">
          <ul class="clearfix">
            <li>
              <%= I18n.t(:authorization) %>
            </li>
            <li>
              <%= I18n.t(:song_list) %>
            </li>
            <li>
              <%= I18n.t(:listening) %>
            </li>
            <li>
              <%= I18n.t(:favorite_songs) %>
            </li>
            <li>
              <%= I18n.t(:settings) %>
            </li>
          </ul>
        </section>
        <footer>
          <p><a href="http://flatsoft.com">&copy; Flatsoft</a></p>
        </footer>
      </div>
    </div>
  </div>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/js/libs/jquery-1.6.2.min.js"><\/script>')</script>
  <script defer src="/js/plugins.js"></script>
  <script defer src="/js/script.js"></script>
  <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->

</body>
</html>
